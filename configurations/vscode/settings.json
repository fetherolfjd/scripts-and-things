// Place your settings in this file to overwrite the default settings
{
  // put tab size to 4 for now
  "editor.tabSize": 4,
  // stop getting my tab and space settings overridden
  "editor.detectIndentation": false,
  // tell editor not to wrap
  "editor.wordWrap": -1,
  // set a ruler at 80
  "editor.rulers": [
    80
  ],
  // Remove trailing whitespace on file save
  "files.trimTrailingWhitespace": true,
  // add final newline
  "files.insertFinalNewline": true,
  // keep opened files rather than preview
  "workbench.editor.enablePreview": false,
  // set terminal to my terminal
  "terminal.external.osxExec": "iTerm.app",
  "eslint.enable": true,
  "eslint.options": {
    "configFile": "/Users/jfetherolf/.eslintrc.json"
  },
  // output info from node security project plugin
  "nsp.output": "default",
  // map jj to escape for vim
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<esc>"]
    }
  ],
  // map ; to : and tab switch
  "vim.otherModesKeyBindings": [
    {
      "before": [";"],
      "after": [":"]
    },
    {
      "before": ["]"],
      "after": [":tabn"]
    },
    {
      "before": ["["],
      "after": [":tabp"]
    }
],
"vim.disableAnnoyingNeovimMessage": true,

"editor.minimap.enabled": false
}
